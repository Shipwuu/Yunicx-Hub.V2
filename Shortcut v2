-- Check if the folder exists, create it if it doesn't
if not isfolder("Shipu_Script") then
    makefolder("Shipu_Script")
end

-- Function to save the script content to a txt file
local function saveScriptToFile(scriptName, scriptContent)
    local filePath = "Shipu_Script/" .. scriptName .. ".txt"
    writefile(filePath, scriptContent)
end

-- Function to create buttons and position them dynamically in rows
local function createButtonWithPosition(scriptName, index)
    -- Create the button template with the specified size
    local templatescript = Instance.new("TextButton")
    templatescript.Name = "AddScript_" .. scriptName
    templatescript.Size = UDim2.new(0, 37, 0, 37)  -- Adjusted size
    templatescript.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    templatescript.BackgroundTransparency = 0.8
    templatescript.Text = scriptName  -- Set the text to the script name
    templatescript.Parent = SecondMainFrame  -- Assuming SecondMainFrame is defined elsewhere
    
    -- Apply UICorner to templatescript button
    local UICorner = Instance.new("UICorner")
    UICorner.CornerRadius = UDim.new(0.1, 0)
    UICorner.Parent = templatescript

    -- Calculate the position based on index
    local row = math.floor((index - 1) / 8)  -- Determines the row number
    local col = (index - 1) % 8  -- Determines the column position in the row

    -- Position the button (adjust for spacing)
    templatescript.Position = UDim2.new(0, col * 47, 0, row * 47)  -- Adjust for the button size (47 instead of 37)

    -- Button click function to load and execute the script content
    templatescript.MouseButton1Click:Connect(function()
        local filePath = "Shipu_Script/" .. scriptName .. ".txt"
        local scriptContent = readfile(filePath)
        
        -- Use loadstring to execute the content of the script directly
        local success, errorMsg = pcall(function()
            local func = loadstring(scriptContent)  -- Convert the content to a Lua function
            if func then
                func()  -- Execute the loaded function
            else
                error("Failed to load script: " .. scriptName)
            end
        end)
        
        -- If there's an error, print the error message
        if not success then
            warn("Error executing script " .. scriptName .. ": " .. errorMsg)
        end
    end)
end

-- Button click functionality
AddScriptButton.MouseButton1Click:Connect(function()
    local scriptName = InputNameBox.Text
    local scriptContent = InputScriptTextBox.Text
    
    if scriptName ~= "" and scriptContent ~= "" then
        -- Save the script to file
        saveScriptToFile(scriptName, scriptContent)
        print("Script saved: " .. scriptName)
        
        -- Create a button dynamically for the saved script
        createButtonWithPosition(scriptName, #listfiles("Shipu_Script"))
    else
        print("Please fill in both fields.")
    end
end)

-- Update the button color based on text input
InputNameBox.Changed:Connect(function()
    if InputNameBox.Text ~= "" and InputScriptTextBox.Text ~= "" then
        AddScriptButton.BackgroundColor3 = Color3.fromRGB(59, 139, 254)
    else
        AddScriptButton.BackgroundColor3 = Color3.fromRGB(183, 183, 183)
    end
end)

InputScriptTextBox.Changed:Connect(function()
    if InputNameBox.Text ~= "" and InputScriptTextBox.Text ~= "" then
        AddScriptButton.BackgroundColor3 = Color3.fromRGB(59, 139, 254)
    else
        AddScriptButton.BackgroundColor3 = Color3.fromRGB(183, 183, 183)
    end
end)

-- Load existing scripts and create buttons for them
for index, file in ipairs(listfiles("Shipu_Script")) do
    if file:match(".txt$") then
        local scriptName = file:match("Shipu_Script/(.+).txt")
        createButtonWithPosition(scriptName, index)
    end
end
